<section class="products-show">
  <header class="page-header">
    <%= link_to @product.category.name, @product.category %>
    <h1><%= @product.name %></h1>
  </header>
  <article class="product-detail">
    <div class="row">
      <div class="col-sm-4">
      <% if @product.image.attached? %>
      <%= image_tag url_for(@product.image), alt: @product.name, class: 'main-img' %>
      <% end %>
      </div>
      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
            <dd><%= @product.name %></dd>
          <dt>Description</dt>
            <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
            <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
            <dd><%= @product.price %></dd><br/>
        </dl>
      </div>
    </div>
    <br/>
  </article>
</section>
